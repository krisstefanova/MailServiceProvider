<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
  <title>SPA Mail Service Provider</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <style>
    body { padding-top:30px; }
  </style>
</head>
<body>
  <div class="container">

    <div class="jumbotron text-center">
      <h1><span class="fa fa-check btn-success"></span> SPA Mail Service Provider</h1>
      <p>Would you like to send an email?</p>
    </div>

    <div class="container">
      <div class="col-sm-6 col-sm-offset-3">

        <% if (locals.success) { %>
          <div class="alert alert-success"><%= success %></div>
        <% } %>

        <% if (locals.error) { %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>

        <form action="/" method="post" class="text-left">
          <div class="form-group">
            <label for="emailFrom">From*</label>
            <input type="text" class="form-control" name="emailFrom">
          </div>

          <div class="form-group">
            <label for="emailTo">To*</label>
            <input type="text" class="form-control" name="emailTo">
          </div>

          <div class="form-group">
            <label for="cc">CC</label>
            <input type="text" class="form-control" name="cc">
          </div>

          <label for="bcc">BCC</label>
          <div class="form-group">
            <input type="text" class="form-control" name="bcc">
          </div>

          <div class="form-group">
            <label for="subject">Subject*</label>
            <input type="text" class="form-control" name="subject">
          </div>

          <div class="form-group">
            <label for="message">Email Message*</label>
            <textarea class="form-control" rows="3" name="message"></textarea>
          </div>

          <button type="submit" class="btn btn-lg btn-success"><span class="fa fa-envelope-o"></span> Send Email</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
